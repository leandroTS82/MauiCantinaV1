<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CantinaV1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CantinaV1.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CantinaV1">

    <!-- Barra de navegação no footer -->
    <TabBar>

        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>

        <Tab Title="Produtos" Icon="products">
            <ShellContent ContentTemplate="{DataTemplate views:ProductsPage}" Route="products"/>
        </Tab>

        <Tab Title="Pedidos" Icon="orders">
            <ShellContent ContentTemplate="{DataTemplate views:OrderPage}" Route="orders"/>
        </Tab>

    </TabBar>

</Shell>
