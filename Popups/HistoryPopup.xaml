<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="CantinaV1.Popups.HistoryPopup">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Deseja registrar o histórico antes de limpar os pedidos?" FontSize="16" HorizontalOptions="Center"/>
        <Entry x:Name="entryObservation" Placeholder="Observação (opcional)" />
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="Registrar e Limpar" Clicked="OnRegisterAndClearClicked"/>
            <Button Text="Limpar sem Registrar" Clicked="OnClearWithoutRegisterClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
