<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CantinaV1.Views.ConfigurationPage"
             Title="Configurações">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Configurações de Contato" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <!-- Seção de Configuração -->
        <Frame Padding="15" CornerRadius="10" BackgroundColor="#f5f5f5">
            <VerticalStackLayout Spacing="15">

                <!-- DDD e Telefone -->
                <HorizontalStackLayout Spacing="10">
                    <Entry x:Name="entryDDD" Placeholder="DDD" Keyboard="Numeric" WidthRequest="80" TextChanged="entryDDD_TextChanged"/>
                    <Entry x:Name="entryTelefone" Placeholder="Telefone" Keyboard="Telephone" HorizontalOptions="FillAndExpand"/>
                </HorizontalStackLayout>

                <!-- Botões lado a lado -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Switch x:Name="switchHabilitado" />
                    <Label Text="Receber pedidos" VerticalOptions="Center" />
                    <Button Text="Salvar" Clicked="OnSalvarConfiguracaoClicked" WidthRequest="80" BackgroundColor="#2196F3" TextColor="White"/>
                </HorizontalStackLayout>

                <!-- Informação adicional -->
                <Label Text="O número registrado receberá os pedidos para entrega no balcão." 
                       FontAttributes="Italic" 
                       FontSize="14" 
                       TextColor="Gray"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
