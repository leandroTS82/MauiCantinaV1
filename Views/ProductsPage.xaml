<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CantinaV1.Views.ProductsPage"
             Title="ProductsPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Produtos" FontSize="24" HorizontalOptions="Center"/>

        <ListView x:Name="listProdutos" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="{Binding Nome}" WidthRequest="150"/>
                            <Label Text="{Binding Preco, StringFormat='R${0:N2}'}" WidthRequest="80"/>
                            <Entry Text="{Binding Quantidade}" Keyboard="Numeric" WidthRequest="50"/>
                            <Label Text="{Binding Total, StringFormat='R${0:N2}'}" WidthRequest="80"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Adicionar Ã  Compra" Clicked="OnAdicionarProdutoClicked"/>
        <Label x:Name="labelTotal" Text="Total: R$0,00" FontSize="18" HorizontalOptions="Center"/>
        <Button Text="Limpar Produtos" Clicked="OnLimparProdutosClicked" BackgroundColor="Red" TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>