<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CantinaV1.Views.ReceivedOrdersPage"
             x:Name="ThisPage">

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <!-- Lista de Pedidos nÃ£o selecionados -->
            <Label Text="Pedidos Recebidos"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Orders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="10"
                               CornerRadius="10"
                               HasShadow="True"
                               BorderColor="Gray"
                               BackgroundColor="LightYellow">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnOrderTapped" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout>
                                <Label Text="{Binding ClientName}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black" />

                                <Label Text="{Binding Created}"
                                       FontSize="14"
                                       TextColor="Gray" />

                                <Label Text="{Binding Id}"
                                       FontSize="12"
                                       TextColor="DarkGray"
                                       FontAttributes="Italic" />

                                <Label Text="Produtos:"
                                       FontAttributes="Bold"
                                       Margin="0,10,0,5" />

                                <CollectionView ItemsSource="{Binding Products}"
                                                Margin="0,0,0,10">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <HorizontalStackLayout>
                                                <Label Text="{Binding ProductName}" />
                                                <Label Text=" x " />
                                                <Label Text="{Binding Quantity}" />
                                            </HorizontalStackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <Label Text="{Binding IsSelected, StringFormat='Selecionado: {0}'}"
                                       FontSize="12"
                                       TextColor="Green"
                                       HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Lista de Pedidos selecionados -->
            <Label x:Name="LabelReceivedOrders"
                   IsVisible="False"
                   Text="Pedidos Entregues"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,30,0,10" />

            <CollectionView ItemsSource="{Binding SelectedOrders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="10"
                               CornerRadius="10"
                               HasShadow="True"
                               BorderColor="Gray"
                               BackgroundColor="LightGreen">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnOrderTapped" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout>
                                <Label Text="{Binding ClientName}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black" />

                                <Label Text="{Binding Created}"
                                       FontSize="14"
                                       TextColor="Gray" />

                                <Label Text="{Binding OrderKey}"
                                       FontSize="6"
                                       TextColor="DarkGray"
                                       FontAttributes="Italic" />

                                <Label Text="Produtos:"
                                       FontAttributes="Bold"
                                       Margin="0,10,0,5" />

                                <CollectionView ItemsSource="{Binding Products}"
                                                Margin="0,0,0,10">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <HorizontalStackLayout>
                                                <Label Text="{Binding ProductName}" />
                                                <Label Text=" x " />
                                                <Label Text="{Binding Quantity}" />
                                            </HorizontalStackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <Label Text="{Binding IsSelected, StringFormat='Selecionado: {0}'}"
                                       FontSize="12"
                                       TextColor="Green"
                                       HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
