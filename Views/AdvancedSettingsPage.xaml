<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CantinaV1.Views.AdvancedSettingsPage"
             Title="Configurações Avançadas">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Configurações Avançadas"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Seção: Configuração Firebase com Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Frame Padding="10" BackgroundColor="#E0E0E0" CornerRadius="10">
                        <Label Text="Firebase" FontSize="18" FontAttributes="Bold" />
                    </Frame>
                </toolkit:Expander.Header>

                <toolkit:Expander.Content>
                    <Frame Padding="15" CornerRadius="10" BackgroundColor="#F5F5F5">
                        <VerticalStackLayout Spacing="15">
                            <!-- 
                            <Entry x:Name="entryFirebaseProjectId"
                                   Placeholder="Project ID"
                                   Text="{Binding FirebaseProjectId}" />

                            <Entry x:Name="entryFirebaseStorageBucket"
                                   Placeholder="Storage Bucket"
                                   Text="{Binding FirebaseStorageBucket}" />

                            <Entry x:Name="entryFirebaseMessagingSenderId"
                                   Placeholder="Messaging Sender ID"
                                   Text="{Binding FirebaseMessagingSenderId}" />

                            <Entry x:Name="entryFirebaseAppId"
                                   Placeholder="App ID"
                                   Text="{Binding FirebaseAppId}" />
                            -->
                            <Entry x:Name="entryFirebaseApiKey"
                                   Placeholder="API Key"
                                   Text="{Binding FirebaseApiKey}" />
                            
                            <Entry x:Name="entryFirebaseAuthDomain"
                                    Placeholder="Auth Domain"
                                    Text="{Binding FirebaseAuthDomain}" />
                            <Button Text="Salvar"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    Clicked="OnSalvarFirebaseClicked" />
                        </VerticalStackLayout>
                    </Frame>
                </toolkit:Expander.Content>
            </toolkit:Expander>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
