<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CantinaV1.Views.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Bem-vindo à Cantina" 
               FontSize="24" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"
               TextColor="DarkSlateBlue"/>

        <Frame CornerRadius="10" HasShadow="True" Padding="0" BackgroundColor="DarkBlue">
            <Button Text="Produtos" 
                    FontSize="18"
                    BackgroundColor="LightYellow"
                    TextColor="Black"
                    BorderColor="White"
                    BorderWidth="2"
                    Clicked="GoToProductsPage"/>
        </Frame>

        <Frame CornerRadius="10" HasShadow="True" Padding="0" BackgroundColor="DarkRed">
            <Button Text="Pedidos" 
                    FontSize="18"
                    BackgroundColor="Green"
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="2"
                    Clicked="GoToOrderPage"/>
        </Frame>

        <Frame CornerRadius="10" HasShadow="True" Padding="0" BackgroundColor="Green">
            <Button Text="Configurações" 
                    FontSize="18"
                    BackgroundColor="Green" 
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="2"
                    Clicked="GoToConfigurationPage"/>
        </Frame>

        <!-- Seção de instruções -->
        <Frame BackgroundColor="LightGray"
               CornerRadius="10"
               Padding="10"
               HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Label Text="Como usar a Cantina"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <Label Text="1 - Vá em 'Produtos' e cadastre os itens que serão vendidos e seus preços."
                       FontSize="14"
                       TextColor="Black"/>
                <Label Text="2 - Em 'Configurações', você pode ativar o envio de pedidos para o balcão via WhatsApp."
                       FontSize="14"
                       TextColor="Black"/>
                <Label Text="3 - Em 'Pedidos', registre os pedidos com nome (alguns nomes estão pré cadastrados e aparecem quando iniciar a digitação), quantidade e forma de pagamento. No final, clique em 'Exportar' para gerar e compartilhar o relatório do caixa."
                       FontSize="14"
                       TextColor="Black"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
