<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CantinaV1.Views.MainPage"
             Title="Cantina">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Avançado"
                     IconImageSource="settings.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="GoToAdvancedSettingsPage" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">
            <Label Text="Bem-vindo à Cantina" 
                   FontSize="32" 
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="#2C3E50" />

            <Grid RowSpacing="20" ColumnSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame Grid.Row="0" BackgroundColor="#3498DB" CornerRadius="12" Padding="0" HasShadow="True">
                    <Button Text="Produtos" 
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            Clicked="GoToProductsPage"/>
                </Frame>

                <Frame Grid.Row="1" BackgroundColor="#E74C3C" CornerRadius="12" Padding="0" HasShadow="True">
                    <Button Text="Pedidos" 
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            Clicked="GoToOrderPage"/>
                </Frame>

                <Frame Grid.Row="2" BackgroundColor="#27AE60" CornerRadius="12" Padding="0" HasShadow="True">
                    <Button Text="Configurações" 
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            Clicked="GoToConfigurationPage"/>
                </Frame>
            </Grid>

            <Frame BackgroundColor="#ECF0F1"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Como usar a Cantina"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2C3E50" />

                    <Label Text="1 - Vá em 'Produtos' e cadastre os itens que serão vendidos e seus preços."
                           FontSize="16"
                           TextColor="#34495E" />

                    <Label Text="2 - Em 'Configurações', você pode ativar o envio de pedidos para o balcão via WhatsApp."
                           FontSize="16"
                           TextColor="#34495E" />

                    <Label Text="3 - Em 'Pedidos', registre os pedidos com nome, quantidade e forma de pagamento. No final, clique em 'Exportar' para gerar e compartilhar o relatório do caixa."
                           FontSize="16"
                           TextColor="#34495E" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
