<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CantinaV1.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Cantina da Igreja" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="entryNome" Placeholder="Nome do Produto"/>
        <Entry x:Name="entryPreco" Placeholder="Preço" Keyboard="Numeric"/>
        <Entry x:Name="entryQuantidade" Placeholder="Quantidade" Keyboard="Numeric"/>

        <Button Text="Adicionar Produto" Clicked="OnAdicionarProdutoClicked"/>

        <ListView x:Name="listProdutos">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nome}" Detail="{Binding Total}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label x:Name="labelTotal" Text="Total: R$0,00" FontSize="18" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
